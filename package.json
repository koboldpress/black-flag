{
	"scripts": {
		"build": "npm run build:code && npm run build:styles",
		"build:code": "rollup black-flag.mjs -f es -o black-flag-compiled.mjs -m --sourcemapFile black-flag.mjs",
		"build:styles": "postcss styles/_module.css -o black-flag.css -m",
		"lint": "eslint --ext .mjs ./",
		"lint:fix": "eslint --ext .mjs ./ --fix",
		"watch": "postcss styles/_module.css -o black-flag.css -m -w"
	},
	"devDependencies": {
		"eslint": "^8.48.0",
		"eslint-plugin-jsdoc": "^46.5.1",
		"postcss": "^8.4.29",
		"postcss-cli": "^10.1.0",
		"postcss-import": "^15.1.0",
		"postcss-preset-env": "^9.1.3",
		"rollup": "^3.29.0"
	}
}
