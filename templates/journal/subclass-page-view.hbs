{{#if data.title.show}}
	<header>
		<h{{ title.level1 }}>{{ data.name }}</h{{ title.level1 }}>
	</header>
{{/if}}

{{#if linked.document}}

	<section>
		{{{ enriched.introduction }}}

		{{> "blackFlag.journal-table" table=table level=title.level2 class="progression"
		    caption=(localize "BF.JournalPage.Class.Table.Caption" class=linked.name) }}

		{{#each features}}
			<h{{ @root.title.level2 }}>{{ name }}</h{{ @root.title.level2 }}>
			{{#if this.tag}}<em>{{ tag }}</em>{{/if}}
			{{{ description }}}
		{{/each}}

		{{{ enriched.conclusion }}}
	</section>

{{else}}
	<section>
		{{ localize "BF.JournalPage.Subclass.NoSubclass" }}
	</section>
{{/if}}
