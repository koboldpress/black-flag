<fieldset>
		<legend>{{ localize "BF.SAVE.Challenge" }}</legend>
		{{ formField systemFields.save.fields.ability value=source.system.save.ability
		             options=CONFIG.abilities.localizedOptions rootId=partId }}
		{{ formField systemFields.save.fields.dc.fields.ability value=source.system.save.dc.ability options=abilityOptions
		             rootId=partId }}
		{{#if (eq source.system.save.dc.ability "custom")}}
			{{ formField systemFields.save.fields.dc.fields.formula value=source.system.save.dc.formula
			             rootId=partId }}
		{{else}}
			{{ formField systemFields.save.fields.dc.fields.formula name="" value=(localize "BF.Formula.Default.DC")
			             disabled=true rootId=partId }}
			<input type="hidden" name="system.save.dc.formula" value="{{ source.system.save.dc.formula }}">
		{{/if}}
</fieldset>
